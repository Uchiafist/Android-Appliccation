<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ActivityMain"
    android:background="#dedede">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:id="@+id/relOne"
        tools:context=".ActivityInfo"
        android:background="#ffffff">



        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button_new_reservation"
            android:src="@android:drawable/ic_menu_revert"
            android:background="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonSettingsMain"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_partial_secure"
            android:background="#ffffff"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonInfo"
            android:layout_alignParentTop="true"
            android:background="#ffffff"
            android:src="@android:drawable/ic_menu_info_details"
            android:layout_toLeftOf="@+id/buttonSettingsMain"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="About Us"
                android:id="@+id/textView"
                android:layout_below="@+id/buttonSettingsMain"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/holo_blue_dark"/>

    </RelativeLayout>


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:layout_below="@+id/relOne"
        android:background="#dedede">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            tools:context=".ActivityInfo"
            android:background="#dedede">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Like Us on Facebook!"
                android:id="@+id/textView2"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_rounded_corners"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Follow Us on Twitter!"
                android:id="@+id/textView3"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_rounded_corners"
                android:layout_below="@+id/textView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Donate!"
                android:id="@+id/textView4"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_rounded_corners"
                android:layout_below="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"/>

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/buttonFBRedirect"
                android:src="@drawable/ic_menu_facebook"
                android:layout_alignTop="@+id/textView2"
                android:layout_marginTop="27dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="#ffffff"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/buttonTwitRedirect"
                android:layout_alignTop="@+id/textView3"
                android:layout_alignRight="@+id/textView3"
                android:layout_marginTop="27dp"
                android:src="@drawable/ic_menu_twitter2"
                android:layout_marginRight="15dp"
                android:background="#ffffff"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/buttonPayPalRedirect"
                android:layout_alignTop="@+id/textView4"
                android:layout_alignRight="@+id/textView4"
                android:layout_marginTop="27dp"
                android:src="@drawable/ic_menu_paypal"
                android:layout_marginRight="15dp"
                android:background="#ffffff"
                android:scaleType="centerCrop"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>

