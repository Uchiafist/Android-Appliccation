<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ActivityMain"
    android:background="#dedede">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:id="@+id/relOne"
        tools:context=".ActivityInfo"
        android:background="#ffffff">


        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button_new_reservation"
            android:src="@android:drawable/ic_menu_revert"
            android:background="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonSettingsMain"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_partial_secure"
            android:background="#ffffff"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonInfo"
            android:layout_alignParentTop="true"
            android:background="#ffffff"
            android:src="@android:drawable/ic_menu_info_details"
            android:layout_toLeftOf="@+id/buttonSettingsMain"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Search Folios"
                android:id="@+id/textView"
                android:layout_below="@+id/buttonSettingsMain"
                android:layout_alignRight="@+id/buttonSettingsMain"
                android:textColor="@android:color/holo_blue_dark"/>

    </RelativeLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:layout_below="@+id/relOne"
        android:background="#dedede">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            tools:context=".ActivityInfo"
            android:background="#dedede">


            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/relLayoutFive"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/white_rounded_corners">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/textFindLastName"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="5dp"
                    android:hint="Last Name"
                    android:layout_toLeftOf="@+id/buttonFindLastMic"/>

                <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/buttonFindLast"
                        android:layout_alignTop="@+id/textFindLastName"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:background="#ffffff"
                        android:src="@android:drawable/ic_menu_search"/>

                <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/buttonFindLastMic"
                        android:layout_alignTop="@+id/textFindLastName"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/buttonFindLast"
                        android:background="#ffffff"
                        android:src="@android:drawable/ic_btn_speak_now"/>


            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/relLayoutSix"
                    android:layout_below="@+id/relLayoutFive"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/white_rounded_corners">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/textFindFirstName"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="5dp"
                    android:hint="First Name"
                    android:layout_toLeftOf="@+id/buttonFindFirstMic"/>

                <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/buttonFindFirst"
                        android:layout_alignTop="@+id/textFindFirstName"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:background="#ffffff"
                        android:src="@android:drawable/ic_menu_search"/>

                <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/buttonFindFirstMic"
                        android:layout_alignTop="@+id/textFindFirstName"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/buttonFindFirst"
                        android:background="#ffffff"
                        android:src="@android:drawable/ic_btn_speak_now"/>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/relLayoutSeven"
                    android:layout_below="@+id/relLayoutSix"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/white_rounded_corners">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/textFindConfirmation"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="5dp"
                    android:hint="Confirmation"
                    android:layout_toLeftOf="@+id/buttonFindConfMic"/>

                <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/buttonFindConf"
                        android:layout_alignTop="@+id/textFindConfirmation"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:background="#ffffff"
                        android:src="@android:drawable/ic_menu_search"/>

                <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/buttonFindConfMic"
                        android:layout_alignTop="@+id/textFindConfirmation"
                        android:layout_marginRight="5dp"
                        android:background="#ffffff"
                        android:layout_toLeftOf="@+id/buttonFindConf"
                        android:src="@android:drawable/ic_btn_speak_now"/>


            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/relLayoutEight"
                    android:layout_below="@+id/relLayoutSeven"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/white_rounded_corners">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/textFindRoomNumber"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="5dp"
                    android:hint="Room Number"
                    android:layout_toLeftOf="@+id/buttonFindRoomMic"/>

                <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/buttonFindRoom"
                        android:layout_alignTop="@+id/textFindRoomNumber"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:background="#ffffff"
                        android:src="@android:drawable/ic_menu_search"/>

                <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/buttonFindRoomMic"
                        android:layout_alignTop="@+id/textFindRoomNumber"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/buttonFindRoom"
                        android:background="#ffffff"
                        android:src="@android:drawable/ic_btn_speak_now"/>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/relLayoutNine"
                    android:layout_below="@+id/relLayoutEight"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/white_rounded_corners">

                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/textFindCC"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="5dp"
                        android:hint="CC Number"
                        android:layout_toLeftOf="@+id/buttonFindCCMic"/>

                <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/buttonFindCC"
                        android:layout_alignTop="@+id/textFindCC"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:background="#ffffff"
                        android:src="@android:drawable/ic_menu_search"/>

                <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/buttonFindCCMic"
                        android:layout_alignTop="@+id/textFindCC"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/buttonFindCC"
                        android:background="#ffffff"
                        android:src="@android:drawable/ic_btn_speak_now"/>

            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
