<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/grey_rounded_corners">

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:id="@+id/relOne"
            tools:context=".ActivityInfo"
            android:layout_marginTop="0dp"
            android:background="@drawable/white_rounded_corners"
            android:gravity="center_horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="FirstName"
                android:id="@+id/textDialogFirst"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=" "
                android:id="@+id/textView"
                android:layout_alignTop="@+id/textDialogFirst"
                android:layout_toRightOf="@+id/textDialogFirst"
                android:gravity="center_vertical"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="LastName"
                android:id="@+id/textDialogLast"
                android:layout_alignTop="@+id/textView"
                android:layout_toRightOf="@+id/textView"
                android:gravity="center_vertical"/>

    </RelativeLayout>

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:id="@+id/relTwo"
            android:layout_below="@+id/relOne"
            tools:context=".ActivityInfo"
            android:background="#dedede">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Phone Number"
                android:id="@+id/textDialogPhone"
                android:gravity="center_vertical"
                android:layout_below="@+id/textDialogEmail"
                android:layout_alignLeft="@+id/textDialogEmail"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="10dp"
                android:background="@drawable/white_rounded_corners"
                android:layout_toLeftOf="@+id/buttonDialogPhone"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Email"
                android:id="@+id/textDialogEmail"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/white_rounded_corners"
                android:layout_toLeftOf="@+id/buttonDialogEmail"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Guest Status"
                android:id="@+id/textDialogStatus"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/white_rounded_corners"
                android:layout_below="@+id/textDialogPhone"
                android:layout_alignParentRight="true"/>


        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/buttonDialogPhone"
                android:src="@android:drawable/ic_menu_call"
                android:background="@drawable/white_rounded_corners"
                android:layout_alignTop="@+id/textDialogPhone"
                android:layout_alignRight="@+id/textDialogEmail"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/buttonDialogEmail"
            android:src="@android:drawable/ic_menu_set_as"
            android:background="@drawable/white_rounded_corners"
            android:layout_alignTop="@+id/textDialogEmail"
            android:layout_alignParentRight="true"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:id="@+id/buttonDialogDone"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_below="@+id/textDialogStatus"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/white_rounded_corners"/>

        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/buttonDialogText"
                android:layout_alignTop="@+id/buttonDialogPhone"
                android:layout_alignParentRight="true"
                android:background="@drawable/white_rounded_corners"
                android:src="@android:drawable/ic_menu_send"/>

    </RelativeLayout>


</RelativeLayout>